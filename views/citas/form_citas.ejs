<%-include('../estatico/nav')%>



<section class="container mt-3 mb-3" style="background-color: #ACB6F9; max-width: 1000px; border-radius: 0.3cm;">
    <div class="row">
        <div class="col-lg-6 offset-lg-3 p-4">
            <h1>Formulario Citas</h1>
            <form action="/guardar_cita" method="post">
                
                
                    <h1>Editar</h1>
                
                <div class="mb-3">
                    <label for="usuario" class="form-label">Usuario</label>
                    <input type="hidden" name="idCita" value="">
                    <select name="usuario" class="form-select">
                        <%listarusuario.forEach(usuario=>{%>

                        
                            <option value="<%=usuario.nombre%>"><%=usuario.nombre%></option>
                            
                       <% })%>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="fecha" class="form-label">Fecha</label>
                    <input type="date" class="form-control" name="fecha" value="" required>
                </div>
                <div class="mb-3">
                    <label for="lugar" class="form-label">Lugar</label>
                    <input type="text" class="form-control" name="lugar" value="" required>
                </div>
                <div class="mb-3">
                    <label for="hora" class="form-label">Hora</label>
                    <input type="time" class="form-control" name="hora" value="" required>
                </div>
                <div class="mb-3">
                    <label for="servicio" class="form-label">Servicio</label>
                    <select name="servicio" class="form-select"  required>
                       
                        <%listarservicio.forEach(servicio=>{%>

                        
                            <option value="<%=servicio.nombre%>"><%=servicio.nombre%></option>
                            
                       <% })%>
                        
                      </select>
                </div>
                <div class="mb-3">
                    <label for="empleado" class="form-label">Empleado</label>
                    <select name="empleado" class="form-select" required>
                        
                        <%listarempleado.forEach(empleado=>{%>

                        
                            <option value="<%=empleado.nombre%>"><%=empleado.nombre%></option>
                            
                       <% })%>
                        
                        
                        
                       
                  </select>
                </div>
              <div class="d-flex justify-content-center">
                

               
                <button type="submit" class="btn btn-dark rounded-pill">Crear</button>
                
              </div>
              
            </form>
        </div>
    </div>
</section>

              
                    
                       